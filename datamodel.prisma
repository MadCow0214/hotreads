type User {
  id: ID! @id
  nickName: String @unique
  firstName: String
  lastName: String
  email: String! @unique
  avatar: String
  uploadedBooks: [Book!]! @relation(name:"BookUploadedByUser")
  wantedBooks: [Book!]! @relation(link: TABLE, name:"BookWantedByUser")
  reviews: [Review!]! @relation(onDelete:CASCADE)
}

type Book {
  id: ID! @id
  title: String! @unique
  author: Author!
  image: String
  uploader: User! @relation(name:"BookUploadedByUser")
  wantedUsers: [User!]! @relation(name:"BookWantedByUser")
  tags: [Tag!]!
  reviews: [Review!]!
}

type Review {
  id: ID! @id
  user: User!
  book: Book!
  text: String
  star: Int!
}

type Tag {
  id: ID! @id
  name: String! @unique
  books: [Book!]!
}

type Author {
  id: ID! @id
  name: String! @unique
  books: [Book!]!
}
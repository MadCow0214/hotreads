type User {
  id: ID! @id
  nickName: String @unique
  firstName: String
  lastName: String
  email: String! @unique
  avatar: String
  password: String!
  verifyCode: String
  uploadedBooks: [Book!]! @relation(name:"BookUploadedByUser")
  wantedBooks: [Book!]! @relation(link: TABLE, name:"BookWantedByUser")
  reviews: [Review!]! @relation(onDelete:CASCADE)
}

type Book {
  id: ID! @id
  title: String! @unique
  subTitle: String
  category: Int!
  author: Author
  company: String
  image: String
  desc: String
  publishDate: DateTime!
  createdAt: DateTime! @createdAt
  uploader: User @relation(name:"BookUploadedByUser")
  wantedUsers: [User!]! @relation(name:"BookWantedByUser")
  tags: [Tag!]!
  reviews: [Review!]! @relation(onDelete:CASCADE)
}

type Review {
  id: ID! @id
  user: User!
  book: Book!
  text: String
  star: Int!
  createdAt: DateTime! @createdAt
}

type Tag {
  id: ID! @id
  name: String! @unique
  books: [Book!]!
}

type Author {
  id: ID! @id
  name: String! @unique
  books: [Book!]!
}